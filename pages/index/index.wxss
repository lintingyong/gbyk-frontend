/* pages/index/index.wxss */
.container{
  padding: 56rpx 32rpx 0rpx;
}
.header{
  width: 100%;
  display: table;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  padding: 0rpx 32rpx;
  background-color: #fff;
}
.my_avator{
  width: 64rpx;
  height: 64rpx;
  overflow: hidden;
  border-radius: 50%;
  vertical-align: middle;
}
.header .usernick{
  line-height: 64rpx;
  padding-left: 15rpx;
}
.search{
  float: right;
  width: 42rpx;
  height: 42rpx;
  margin-top: 11rpx;
  overflow: hidden;
}

.card_item{
  width: 100%;
  min-height: 300rpx;
  background-size: cover;
  background-position: center;
  margin-top:40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.card_head{
  width: 100%;
  padding: 32rpx 32rpx;
  display: table;
  background-image: linear-gradient(to bottom,rgba(0, 0, 0, 0.52),rgba(231, 233, 233, 0));
}
.userinfo{
  display: table;
  float: left;
}
.avator{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  vertical-align: middle;
  float: left;
}
.userinfo .usernick{
  font-size: 30rpx;
  display: block;
  color: #fff;
  margin-left: 80rpx;
}
.userinfo .desc{
  color: rgba(255, 255, 255, 0.5);
  font-size: 20rpx;
  display: block;
  margin-left: 80rpx;
}
.collect{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  float: right;
}

.title{
  color: #fff;
  font-size: 38rpx;
  display: block;
  text-align: center;
  margin-top: 40rpx;
  padding: 0rpx 50rpx;
}
.context{
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  padding: 0rpx 50rpx;
  display:inline-block;
  margin-top: 20rpx;
}

.card_bottom{
  display: table;
  margin: 0 auto;
  margin-top: 180rpx;
}
.share, .goto_detail, .thumbs_up{
  width: 64rpx;
  height: 64rpx;
  margin: 0rpx 20rpx;
}